<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Keiser_Java2_1"
    android:gravity="fill_horizontal">

    <!--<fragment android:id="@+id/fragment_body"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/submit"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Movie Title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET"
        android:id="@+id/submit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onSubmit" />

    <ListView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/movieList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/input"
        android:clickable="false"
        android:smoothScrollbar="false"
        android:focusable="false" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Movie Title"
        android:id="@+id/title"
        android:layout_toRightOf="@+id/movieList"
        android:layout_below="@+id/input"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rated : ##"
        android:id="@+id/rated"
        android:layout_alignBottom="@+id/title"
        android:layout_below="@+id/input"
        android:layout_toRightOf="@+id/title"
        android:gravity="right"
        android:layout_alignRight="@+id/submit"
        android:layout_alignEnd="@+id/submit"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Released: Year Mon Day"
        android:id="@+id/released"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/movieList"
        android:layout_toEndOf="@+id/movieList"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rating: ## out of 10"
        android:id="@+id/rating"
        android:layout_below="@+id/title"
        android:layout_alignRight="@+id/rated"
        android:layout_alignEnd="@+id/rated"
        android:gravity="right"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Genre: "
        android:id="@+id/genre"
        android:layout_below="@+id/released"
        android:layout_toRightOf="@+id/movieList"
        android:layout_toEndOf="@+id/movieList"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Plot:"
        android:id="@+id/plot"
        android:layout_below="@+id/genre"
        android:layout_toRightOf="@+id/movieList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
